#include "minishell.h"

int		main(void)
{
	char	*line;
	char	**args;

	while (1)
	{
		write(1, "$> ", 3);
		if (get_next_line(0, &line))
		{
			args = ft_split_whitesplaces(line);
			launch(args);
			//printf("cmd = %s\n", line);
		}
	}
}
